{
    "compilerOptions": {
      "module": "esnext",
      "target": "es6",
      "lib": ["dom", "esnext"],
      "importHelpers": true,
      "declaration": true,
      "sourceMap": true,
      "rootDir": "./src",
      "outDir": "./lib/esm",
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "moduleResolution": "node",
      "baseUrl": "./",
      "jsx": "react",
      "esModuleInterop": true,
      "types": ["jest", "node"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", ".storybook", "src/**/*.test.tsx", "src/**/*.stories.tsx"]
  }
  